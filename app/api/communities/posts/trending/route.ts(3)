    return NextResponse.json({
      success: true,
      posts: mockPosts,
    });
  } catch (error) {
    console.error('Trending posts fetch error:', error);
    return NextResponse.json(
      { success: false, error: 'حدث خطأ أثناء جلب المنشورات الرائجة' },
      { status: 500 }
    );
  }
}

