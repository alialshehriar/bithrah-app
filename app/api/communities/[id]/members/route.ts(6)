import { NextRequest, NextResponse } from 'next/server';

export async function GET(
  request: NextRequest,
  { params }: { params: Promise<{ id: string }> }
) {
  try {
    const { id } = await params;

    // Mock members data
    const mockMembers = [
      { id: '1', name: 'أحمد المحمد', posts: 125, role: 'admin' },
      { id: '2', name: 'فاطمة العلي', posts: 98, role: 'moderator' },
      { id: '3', name: 'محمد السعيد', posts: 87, role: 'member' },
      { id: '4', name: 'نورة الخالد', posts: 76, role: 'member' },
      { id: '5', name: 'خالد الأحمد', posts: 65, role: 'member' },
      { id: '6', name: 'سارة المطيري', posts: 58, role: 'member' },
      { id: '7', name: 'عبدالله الشهري', posts: 52, role: 'member' },
      { id: '8', name: 'ريم القحطاني', posts: 47, role: 'member' },
    ];

    return NextResponse.json({
      success: true,
      members: mockMembers,
    });
  } catch (error) {
    console.error('Members fetch error:', error);
    return NextResponse.json(
      { success: false, error: 'حدث خطأ أثناء جلب الأعضاء' },
      { status: 500 }
    );
  }
}

