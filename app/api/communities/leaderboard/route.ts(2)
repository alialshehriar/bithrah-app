import { NextRequest, NextResponse } from 'next/server';

export async function GET(request: NextRequest) {
  try {
    // Mock leaderboard data
    const mockUsers = [
      { id: '1', name: 'أحمد المحمد', points: 2450, posts: 125, avatar: null },
      { id: '2', name: 'فاطمة العلي', points: 2100, posts: 98, avatar: null },
      { id: '3', name: 'محمد السعيد', points: 1850, posts: 87, avatar: null },
      { id: '4', name: 'نورة الخالد', points: 1650, posts: 76, avatar: null },
      { id: '5', name: 'خالد الأحمد', points: 1420, posts: 65, avatar: null },
      { id: '6', name: 'سارة المطيري', points: 1280, posts: 58, avatar: null },
      { id: '7', name: 'عبدالله الشهري', points: 1150, posts: 52, avatar: null },
      { id: '8', name: 'ريم القحطاني', points: 1020, posts: 47, avatar: null },
    ];

    return NextResponse.json({
      success: true,
      users: mockUsers,
    });
  } catch (error) {
    console.error('Leaderboard fetch error:', error);
    return NextResponse.json(
      { success: false, error: 'حدث خطأ أثناء جلب لوحة الصدارة' },
      { status: 500 }
    );
  }
}

